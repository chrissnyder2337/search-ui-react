{
  "artifactStructure": {
    "assets": [
      {
        "root": "storybook-static"
      }
    ],
    "hbsTemplates": []
  },
  "baseImageTag": "node-16",
  "dependencies": {
    "installDepsCmd": "echo $npm_config_auth && npm install",
    "requiredFiles": [
      ".nvmrc",
      "package.json",
      "src/index.ts",
      "tailwind.config.cjs",
      "tailwind-no-resets.config.cjs"
    ]
  },
  "buildArtifacts": {
    "buildSetupCmd": "npm ci && npm run build:css",
    "buildCmd": "npm run build-storybook"
  },
  "livePreview": {
      "serveSetupCmd": "npm run build:css",
      "serveCmd": "npm run storybook -- -p 8080"
  }
}
